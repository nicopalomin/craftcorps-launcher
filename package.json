{
  "name": "craftcorps-launcher",
  "private": true,
  "version": "0.1.19",
  "main": "electron/main.cjs",
  "author": "CraftCorps Authors",
  "description": "Premium Minecraft Instance Manager",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "node electron/increment-version.js && vite build && electron-builder",
    "electron:build:linux": "node electron/increment-version.js && vite build && electron-builder --linux"
  },
  "build": {
    "appId": "com.craftcorps.launcher",
    "productName": "CraftCorps",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "orbit246",
        "repo": "craftcorps"
      }
    ],
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png",
      "artifactName": "CraftCorps Setup 1.0.2.exe"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "category": "public.app-category.games",
      "icon": "public/icon.png"
    },
    "compression": "maximum",
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "CraftCorps Setup 1.0.2.exe",
      "include": "build/installer.nsh",
      "license": "build/privacy_policy.txt"
    }
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@xmcl/modrinth": "^2.5.0",
    "adm-zip": "^0.5.16",
    "crypto-js": "^4.2.0",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.562.0",
    "minecraft-launcher-core": "^3.18.2",
    "node-downloader-helper": "^2.1.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "systeminformation": "^5.30.0",
    "tapable": "^2.3.0",
    "tree-kill": "^1.2.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "esbuild": "^0.27.0",
    "form-data": "^4.0.1",
    "undici": "^7.16.0"
  }
}
